<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_inicio"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".fragment.InicioActivityFragment"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="45dp">

        <TextView
            android:id="@+id/pedidos_momento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pedidos en este momento..."
            android:textSize="16sp"
            android:layout_marginBottom="15dp"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view_menus_inicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/pedidos_momento"
            android:scrollbars="vertical" />

    </RelativeLayout>



</FrameLayout>
